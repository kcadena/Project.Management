<UserControl x:Class="MProjectWPF.UsersControls.UserSessionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MProjectWPF.UsersControls"
             mc:Ignorable="d" Width="300" Height="90" VerticalAlignment="Top" HorizontalAlignment="Right">
    <Grid Background="#FF93ADFD" >
        <Border BorderBrush="#FF004166" BorderThickness="1" />
        <Image x:Name="manprofile"  Source="pack://application:,,/Resources/manprofile.png" Margin="10,10,212,10"/>
        <TextBlock x:Name="nameUser" Text="NameUser" Margin="93,10,12,54" FontWeight="Bold" TextDecorations="Underline" Foreground="#FF004166"/>
        <TextBlock x:Name="emailUser" Text="emailUser" Margin="95,36,10,37" FontStyle="Italic" />
        <Button x:Name="editProfile" Grid.Column="0" Content="Editar Perfil" Margin="95,58,111,10"/>
        <Button x:Name="closeSession" Content="Cerrar Sesion" Margin="194,58,10,10"/>
    </Grid>
</UserControl>
