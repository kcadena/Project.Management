<UserControl x:Class="MProjectWPF.UsersControls.ActivityPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             gif:ImageBehavior.AnimateInDesignMode="True"
             xmlns:local="clr-namespace:MProjectWPF.UsersControls"
             xmlns:ToggleSwitch="clr-namespace:ToggleSwitch;assembly=ToggleSwitch"
             mc:Ignorable="d">

    <Grid>
        <TabControl Margin="0,0,0,0" Background="{x:Null}" FontWeight="Normal" Foreground="#FF003F66"  BorderBrush="#FF003F66">
            <TabItem  Padding="0">
                <TabItem.Header>
                    <Label Content="INFORMACION"  Foreground="White" Background="#FF003F66"/>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3.5*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="1.1*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="0" Grid.Row="0" Margin="5,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="170" MinHeight="20"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="2.6*" MinHeight="10"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <GroupBox Header="DATOS" Style="{StaticResource groupBoxStyle}" BorderBrush="#FF003F66" Foreground="#FF003F66" FontWeight="Bold" Margin="0,2,0,0">
                                    <Grid x:Name="detalleArea">
                                        <Grid Margin="0,5,0,5" Height="132" VerticalAlignment="Top">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.7*"/>
                                                <ColumnDefinition Width="0.7*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="30"/>
                                                <RowDefinition Height="22"/>
                                                <RowDefinition Height="50"/>
                                            </Grid.RowDefinitions>
                                            <Label x:Name="activityNom" Grid.Column="0" Grid.Row="0" Content="Nombre:" Height="25"  FontWeight="Normal" Foreground=" #FF003F66"/>
                                            <TextBox x:Name="txtNom" Grid.Column="1" Grid.Row="0" Height="25" FontWeight="Normal" VerticalContentAlignment="Center" TextChanged="txtNom_TextChanged"/>
                                            <Label x:Name="txtNomSh" Content="Campo Obligatorio" Grid.Column="1" Grid.Row="0" Height="25" BorderBrush="Red" BorderThickness="1,1" FontWeight="Normal" Foreground="Red" Padding="2" Visibility="Collapsed" MouseLeftButtonUp="txtNomSh_MouseLeftButtonUp"/>

                                            <Label x:Name="activityPA" Grid.Column="0" Grid.Row="1" Content="Porcentaje Asignado:" Height="25" FontWeight="Normal" Foreground=" #FF003F66" Padding="5,5,5,2"/>
                                            <TextBox x:Name="txtPA" FontWeight="Normal" Grid.Column="1"  Grid.Row="1" Height="25" IsReadOnly="True" VerticalContentAlignment="Center"/>
                                            <Label x:Name="txtPASh" Content="Campo Obligatorio" Grid.Column="1" Grid.Row="1" Height="25" BorderBrush="Red" BorderThickness="1,1" FontWeight="Normal" Foreground="Red" Padding="2" Visibility="Collapsed" MouseLeftButtonUp="txtPASh_MouseLeftButtonUp"/>

                                            <Label x:Name="activityDesc" Grid.Column="0" Grid.Row="2" Content="Descripcion:" Height="25" FontWeight="Normal" Foreground=" #FF003F66"/>
                                            <TextBox x:Name="txtDesc" Grid.ColumnSpan="2"  Grid.Row="3" Height="50" Margin="5,0,0,0" FontWeight="Normal" TextWrapping="Wrap"/>
                                            <Label x:Name="txtDescSh" Content="Campo Obligatorio" Grid.ColumnSpan="2" Grid.Row="3" Margin="5,0,0,0"  Height="50" BorderBrush="Red" BorderThickness="1,1" FontWeight="Normal" Foreground="Red" Padding="2" Visibility="Collapsed" MouseLeftButtonUp="txtDescSh_MouseLeftButtonUp"/>

                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <GridSplitter Grid.Row="1"  HorizontalAlignment="Stretch" Margin="-2,0" Background="#00000000" />
                            <Grid Grid.Row="2">
                                <GroupBox Header="TIEMPOS" Style="{StaticResource groupBoxStyle}" BorderBrush="#FF003F66" Foreground="#FF003F66" FontWeight="Bold">
                                    <Grid>
                                        <Label x:Name="lblInitialDate" Content="Fecha Inicio:" VerticalAlignment="Top" Height="25" Margin="0,0,0,0" FontWeight="Normal" Foreground=" #FF003F66"/>
                                        <DatePicker x:Name="initialDate" VerticalAlignment="Top" Height="25" Margin="0,22,0,0" FontWeight="Normal" />
                                        <Label x:Name="initialDateSh" VerticalAlignment="Top" Height="25" Margin="0,22,0,0" Visibility="Collapsed" />
                                        <Label x:Name="lblfinalDate"  Content="Fecha Final:" VerticalAlignment="Top" Height="25" Margin="0,49,0,0" FontWeight="Normal" Foreground=" #FF003F66"/>
                                        <DatePicker x:Name="finalDate" VerticalAlignment="Top" Height="25" FontWeight="Normal" Margin="0,72,0,0"/>
                                        <Label x:Name="finalDateSh" VerticalAlignment="Top" Height="25"  Margin="0,72,0,0" Visibility="Collapsed"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </Grid>
                    </Grid>
                    <GridSplitter Grid.Column="1" Grid.RowSpan="3"  HorizontalAlignment="Stretch"  Background="#00000000"/>
                    <Grid Grid.Column="2" Grid.RowSpan="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="120"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <GroupBox Header="MODULOS" FontWeight="Bold" Foreground="#FF003F66" Margin="0,2,5,0" Style="{StaticResource groupBoxStyle}" BorderBrush="#FF003F66" Grid.RowSpan="2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="5">
                                        <Button x:Name="webWindow" Background="#FF003F66" Click="webWindow_Click" Style="{StaticResource ButtonStyle}" VerticalAlignment="Top">
                                            <Image Source="pack://application:,,/Resources/web-icon.png"/>
                                        </Button>
                                        <Label Content="DISEÑO WEB"  Height="20" FontWeight="Normal" Foreground="#FF003F66" BorderBrush="#FF003F66" BorderThickness="1" HorizontalContentAlignment="Center" Padding="2" FontSize="10.667" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="5" >
                                        <Button x:Name="webMultimedia" Click="webMultimedia_Click" Background="#FF003F66" Style="{StaticResource ButtonStyleGreen}" VerticalAlignment="Top" >
                                            <Image Source="pack://application:,,/Resources/multi-icon.png"/>
                                        </Button>
                                        <Label Content="MULTIMEDIA" Height="20"  FontWeight="Normal" Foreground="#FF003F66" BorderBrush="#FF003F66" BorderThickness="1" HorizontalContentAlignment="Center" Padding="2" FontSize="10.667" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="5" >
                                        <Button x:Name="webMap" Background="#FF003F66" Style="{StaticResource ButtonStyle}" VerticalAlignment="Top">
                                            <Image Source="pack://application:,,/Resources/geo_icon.png"/>
                                        </Button>
                                        <Label Content="GEOREFERENCIA" Height="20" FontWeight="Normal" Foreground="#FF003F66" BorderBrush="#FF003F66" BorderThickness="1" HorizontalContentAlignment="Center" Padding="2" FontSize="10.667" />
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </Grid>
                        <Grid Grid.Row="1">
                            <GroupBox Header="PERMISOS" FontWeight="Bold" Foreground="#FF003F66" Margin="0,2,5,0" Style="{StaticResource groupBoxStyle}" BorderBrush="#FF003F66" Grid.RowSpan="2">
                                <Grid HorizontalAlignment="Center">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="Visualizar Superior:" VerticalAlignment="Center" FontWeight="Normal" Foreground=" #FF003F66" Width="110"/>
                                            <ToggleSwitch:HorizontalToggleSwitch
                                        x:Name="btnPublic"
                                        FontSize="12"
                                        BorderBrush="#FF6A6A6A"
                                        UncheckedForeground="White" 
                                        UncheckedContent="NO" 
                                        CheckedContent="SI"
                                        IsChecked="True"
                                        Margin="0,5,0,10" 
                                        HorizontalAlignment="Left" 
                                        Checked="btnPublic_Checked"
                                        Unchecked="btnPublic_Unchecked">
                                                <ToggleSwitch:HorizontalToggleSwitch.ThumbBrush>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FFB3B5B7" Offset="1"/>
                                                        <GradientStop Color="#FFEDEEEE"/>
                                                    </LinearGradientBrush>
                                                </ToggleSwitch:HorizontalToggleSwitch.ThumbBrush>
                                                <ToggleSwitch:HorizontalToggleSwitch.UncheckedBackground>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FFE1E2E2"/>
                                                        <GradientStop Color="#FF555555"/>
                                                    </LinearGradientBrush>
                                                </ToggleSwitch:HorizontalToggleSwitch.UncheckedBackground>
                                                <ToggleSwitch:HorizontalToggleSwitch.CheckedBackground>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF003F66" Offset="1"/>
                                                        <GradientStop Color="#FF003F66"/>
                                                    </LinearGradientBrush>
                                                </ToggleSwitch:HorizontalToggleSwitch.CheckedBackground>
                                            </ToggleSwitch:HorizontalToggleSwitch>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Content="Publicar pagina:" VerticalAlignment="Center" FontWeight="Normal" Foreground=" #FF003F66" Width="110"/>
                                            <ToggleSwitch:HorizontalToggleSwitch
                                        x:Name="btnPublicWeb"
                                        FontSize="12"
                                        BorderBrush="#FF6A6A6A"
                                        UncheckedForeground="White" 
                                        UncheckedContent="NO" 
                                        CheckedContent="SI"
                                        IsChecked="True"
                                        Margin="0,5,0,10" 
                                        HorizontalAlignment="Left" 
                                        Checked="btnPublic_Checked"
                                        Unchecked="btnPublic_Unchecked">
                                                <ToggleSwitch:HorizontalToggleSwitch.ThumbBrush>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FFB3B5B7" Offset="1"/>
                                                        <GradientStop Color="#FFEDEEEE"/>
                                                    </LinearGradientBrush>
                                                </ToggleSwitch:HorizontalToggleSwitch.ThumbBrush>
                                                <ToggleSwitch:HorizontalToggleSwitch.UncheckedBackground>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FFE1E2E2"/>
                                                        <GradientStop Color="#FF555555"/>
                                                    </LinearGradientBrush>
                                                </ToggleSwitch:HorizontalToggleSwitch.UncheckedBackground>
                                                <ToggleSwitch:HorizontalToggleSwitch.CheckedBackground>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF003F66" Offset="1"/>
                                                        <GradientStop Color="#FF003F66"/>
                                                    </LinearGradientBrush>
                                                </ToggleSwitch:HorizontalToggleSwitch.CheckedBackground>
                                            </ToggleSwitch:HorizontalToggleSwitch>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </GroupBox>
                        </Grid>
                        <Grid Grid.Row="2">
                            <GroupBox Header="PORCENTAJE CUMPLIDO" FontWeight="Bold" Foreground="#FF003F66" Margin="0,2,5,0" Style="{StaticResource groupBoxStyle}" BorderBrush="#FF003F66" Grid.RowSpan="2">
                                <TextBox Height="25"/>
                            </GroupBox>
                        </Grid>
                        <Grid Grid.Row="3">
                            <GroupBox Header="PROPIETARIO" FontWeight="Bold" Foreground="#FF003F66" Margin="0,2,5,0" Style="{StaticResource groupBoxStyle}" BorderBrush="#FF003F66">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="20"/>
                                    </Grid.RowDefinitions>
                                    <Grid x:Name="gridUser" Background="White" AllowDrop="True" Drop="gridUser_Drop" ToolTip="Arraste Usuario" Height="65"/>
                                    <Grid Grid.Row="1">
                                        <StackPanel Orientation="Horizontal">
                                            <Button x:Name="assignUser" Content="Asignar" FontWeight="Normal" Width="60" Click="assignUser_Click"/>
                                            <Button x:Name="clearUser"  Content="Quitar"  FontWeight="Normal" Width="60" Click="clearUser_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </Grid>
                    <GridSplitter Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" Background="#00000000"/>
                    <Grid Grid.Column="0" Grid.Row="2">
                        <TabControl Margin="5,0,0,0" Background="{x:Null}" FontWeight="Normal" Foreground="#FF003F66"  BorderBrush="#FF003F66">
                            <TabItem  Padding="0">
                                <TabItem.Header>
                                    <Label Content="ASIGNADOS"  Foreground="White" Background="#FF003F66"/>
                                </TabItem.Header>
                                <Grid>
                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                        <Grid Margin="0,0,0,0">
                                            <Label x:Name="lblResources" Content="Recursos:" FontWeight="Normal" Foreground=" #FF003F66" VerticalAlignment="Top" Height="25"/>
                                            <TextBox x:Name="txtResourses" Text="0" VerticalAlignment="Top" Height="25" Margin="0,22,26,0" IsReadOnly="True"/>
                                            <Button x:Name="btnResources" VerticalAlignment="Top" Height="25" Margin="0,22,0,0"  Width="25" HorizontalAlignment="Right" Content="+" Click="btnResources_Click" />
                                            <Label x:Name="lblEstimation" Content="Presupuesto:" FontWeight="Normal" Foreground=" #FF003F66" VerticalAlignment="Top" Height="25" Margin="0,49,0,0"/>
                                            <TextBox x:Name="txtEstimation" Text="0" VerticalAlignment="Top" Height="25" Margin="0,71,26,0" IsReadOnly="True" />
                                            <Button x:Name="btnEstimation" VerticalAlignment="Top" Height="25" Margin="0,71,0,0" Width="25" HorizontalAlignment="Right" Content="+" Click="btnEstimation_Click"/>
                                            <Label x:Name="lblCost" Content="Costos:" FontWeight="Normal" Foreground=" #FF003F66" VerticalAlignment="Top" Height="25" Margin="0,96,0,0"/>
                                            <TextBox x:Name="txtCost" Text="0" VerticalAlignment="Top" Height="25" Margin="0,117,26,0"  IsReadOnly="True" />
                                            <Button x:Name="btnCost" VerticalAlignment="Top" Height="25" Margin="0,117,0,0" Width="25" HorizontalAlignment="Right" Content="+" Click="btnCost_Click"/>
                                        </Grid>
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>
                            <TabItem Padding="0" >
                                <TabItem.Header>
                                    <Label Content="DIFERENCIA"  Foreground="White" Background="#FF003F66"/>
                                </TabItem.Header>
                            </TabItem>
                        </TabControl>
                    </Grid>
                    <GridSplitter Grid.ColumnSpan="3" Grid.Row="3" HorizontalAlignment="Stretch" Background="#00000000" />
                    <Grid Grid.ColumnSpan="3" Grid.Row="4">
                        <Border BorderBrush="#FF003F66" BorderThickness="1,1" Margin="5,0,5,6" >
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Label x:Name="stage" Content="Etapa:" VerticalAlignment="Top" Height="25" Margin="7,-3,0,0" FontWeight="Normal" Foreground=" #FF003F66"/>
                                    <ComboBox x:Name="stageBox" Height="24" VerticalAlignment="Top" Style="{DynamicResource comboBoxStyle}" Margin="10,20,10,0" Padding="-20,0,5,3">
                                        <ComboBoxItem IsSelected="True">Iniciacion</ComboBoxItem>
                                        <ComboBoxItem>Planificacion</ComboBoxItem>
                                        <ComboBoxItem>Ejecucion</ComboBoxItem>
                                        <ComboBoxItem>Seguimiento y Control</ComboBoxItem>
                                        <ComboBoxItem>Cierre</ComboBoxItem>
                                    </ComboBox>
                                    <Label x:Name="stageBoxSh" Margin="9,19,9,0" Height="26" VerticalAlignment="Top" Visibility="Collapsed"/>
                                </Grid>
                                <Grid Grid.Column="1">
                                    <Label x:Name="desarrollo" Content="Desarrollo:"  Height="25" VerticalAlignment="Top" Margin="7,-2,0,0" FontWeight="Normal" Foreground=" #FF003F66"/>
                                    <TextBox x:Name="txtDesarollo" Height="25" VerticalAlignment="Top" Margin="10,20,10,0" IsReadOnly="True"/>
                                </Grid>
                            </Grid>
                        </Border>
                        <Button x:Name="btnAddActivity" Content=" GUARDAR ACTIVIDAD " Style="{StaticResource ButtonStyle}" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,12,10" Background="#FF003F66" Foreground="#FFFFFEFE" FontWeight="Bold" FontSize="13.333" MinWidth="90" Click="btnAddActivity_Click" >
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button x:Name="btnUpdateActivity" Content=" ACTUALIZAR ACTIVIDAD " Style="{StaticResource ButtonStyle}" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,12,10" Background="#FF003F66" Foreground="#FFFFFEFE" FontWeight="Bold" FontSize="13.333" MinWidth="90" Click="btnUpdateActivity_Click" Visibility="Collapsed">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button x:Name="btnAddNewActivity" Content=" NUEVA ACTIVIDAD " Style="{StaticResource ButtonStyle}" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,10" Background="#FF003F66" Foreground="#FFFFFEFE" FontWeight="Bold" FontSize="13.333" MinWidth="90" Click="btnAddNewActivity_Click" Visibility="Collapsed" >
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button x:Name="btnEditActivity" Content=" EDITAR ACTIVIDAD " Style="{StaticResource ButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Click="btnEditActivity_Click" Margin="0,0,0,9" Background="#FF003F66" Foreground="White" Visibility="Collapsed" />
                        <Button x:Name="btnDeleteActivity" Content=" ELIMINAR ACTIVIDAD " Style="{StaticResource ButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="btnDeleteActivity_Click" Margin="15,0,0,9" Background="#FF003F66" Foreground="White" Visibility="Collapsed"/>
                        <Button x:Name="btnCancel" Content=" CANCELAR " Style="{StaticResource ButtonStyle}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="btnCancel_Click" Margin="15,0,0,9" Background="#FF003F66" Foreground="White"/>

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Padding="0" >
                <TabItem.Header>
                    <Label Content="REPORTE"  Foreground="White" Background="#FF003F66"/>
                </TabItem.Header>
                <Grid Margin="10,5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="0.3*"/>
                    </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,30,0,0" >
                            <Button Margin="3" Style="{StaticResource ButtonStyle}" Background="#FF003F66" Height="40" Width="35">
                                <Image Source="pack://application:,,/Resources/upload-file.png"/>
                            </Button>
                            <Button Margin="3" Style="{StaticResource ButtonStyle}" Background="#FF003F66" Height="40" Width="35">
                                <Image Source="pack://application:,,/Resources/download-file.png"/>
                            </Button>
                            <Button Margin="3" Style="{StaticResource ButtonStyle}" Background="#FF003F66" Height="40" Width="35">
                                <Image Source="pack://application:,,/Resources/write-file.png"/>
                            </Button>
                        </StackPanel>
                        <Grid Grid.Column="2">
                            <GroupBox Header="REPORTE" FontWeight="Bold" Foreground="#FF003F66" Margin="5" Style="{StaticResource groupBoxStyle}" BorderBrush="#FF003F66" Grid.RowSpan="2">
                                <Grid Margin="5">
                                    <DocumentViewer x:Name="usuReport" FontWeight="Normal" />
                                </Grid>
                            </GroupBox>
                        </Grid>
                    
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
