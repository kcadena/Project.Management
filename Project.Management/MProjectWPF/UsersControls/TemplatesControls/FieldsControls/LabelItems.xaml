<UserControl x:Class="MProjectWPF.UsersControls.TemplatesControls.FieldsControls.LabelItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MProjectWPF.UsersControls.TemplatesControls.FieldsControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="30"/>            
        </Grid.ColumnDefinitions>
        <Label x:Name="lblItem" Content="ItemName" Grid.Column="0" Foreground="#FF003F66" FontFamily="7" />
        <Grid Grid.Column="1" Margin="5,3,0,0" VerticalAlignment="Top">
            <Button x:Name="removeItem" Grid.Column="0" Visibility="Hidden" VerticalAlignment="Top" Click="removeItem_Click" BorderBrush="#FF003F66" Background="{x:Null}" Width="20" Height="20">
                <Image Source="/Resources/Icons/16px/delete-icon.png"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
