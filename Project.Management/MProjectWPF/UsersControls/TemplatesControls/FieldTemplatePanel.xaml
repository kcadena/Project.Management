<UserControl x:Class="MProjectWPF.UsersControls.FieldTemplatePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MProjectWPF.UsersControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label x:Name="lblListFields" Content="PLANTILLA VISTA PREVIA" Margin="0,5,0,0" FontWeight="Bold"  FontFamily="7" Foreground="#FF003F66" Height="25" Background="{x:Null}" VerticalAlignment="Top" />
        <Separator Background="#FF003F66" VerticalAlignment="Top" Margin="0,29,0,0" />

        <ScrollViewer CanContentScroll="True"  Margin="5,45,5,5" VerticalScrollBarVisibility="Hidden">
            <ItemsControl >
                <StackPanel x:Name="listFields" Background="{x:Null}"/>
            </ItemsControl >
        </ScrollViewer>
    </Grid>
</UserControl>
