<UserControl x:Class="MProjectWPF.UsersControls.ProjectControls.WindowsControls.TextBoxNames"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MProjectWPF.UsersControls.ProjectControls.WindowsControls"
             mc:Ignorable="d">
    <Grid>
        <TextBox x:Name="txtNumber" Height="25" PreviewTextInput="txtNumber_PreviewTextInput" Visibility="Collapsed" TextChanged="txtNumber_TextChanged"/>
        <TextBox x:Name="txtText" Height="25" Visibility="Collapsed" VerticalContentAlignment="Center" />
        <Label x:Name="lbl"  Height="25" Visibility="Collapsed" BorderBrush="Gray" BorderThickness="1"  MouseDoubleClick="lbl_MouseDoubleClick" Content="Lapices" Padding="5,2,5,5" />
        <Label x:Name="validation" Height="25" MouseLeftButtonUp="validation_MouseLeftButtonUp" BorderBrush="Red" Foreground="red" BorderThickness="1,1" Content="El campo no debe estar vacio" FontWeight="Bold" Visibility="Collapsed"/>
        <Label x:Name="lbl2"  Height="25" Visibility="Collapsed" BorderBrush="Gray" BorderThickness="1"  MouseLeftButtonUp="lbl2_MouseLeftButtonUp" Padding="5,2,5,5" />
    </Grid>
</UserControl>
